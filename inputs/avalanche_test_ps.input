<parthenon/job>
problem_id = avalanche

<parthenon/mesh>
nx1 = 32
x1min = -2.0
x1max = 2.0
ix1_bc = periodic
ox1_bc = periodic

nx2 = 32
x2min = -2.0
x2max = 2.0
ix2_bc = periodic
ox2_bc = periodic

nx3 = 1
x3min = -0.5
x3max = 0.5
ix3_bc = periodic
ox3_bc = periodic

# How many meshblocks to use in a premade default kernel.
# A value of <1 means use the whole mesh.
pack_size = -1

<parthenon/meshblock>
nx1 = 8
nx2 = 8
nx3 = 1

<ParticleSeed>
num_particles_per_block = 1
rng_seed = 1234
<AnalyticField>
E_0 = 5.0
<GuidingCenterEquations>
c_aw0 = 1.608027383346224e-5 # B = 5.3T
ct_a = 5.e5
alpha0 = 0.05
<Collisions>
Zeff = 1.0
Coulog0 = 10.0
c_vTe = 357.4209530412819
<Simulation>
final_time = 20.0

<parthenon/time>
tlim = 20.0
dt_force = 1e-5

<parthenon/output8>
file_type = rst
dt = 20.0

<parthenon/output0>
file_type = hdf5
write_xdmf = false # Determines whether xdmf annotations are output
# nonexistent variables/swarms are ignored
swarms = particles  # Particle swarms
particles_variables = x, y, z, particle.p, particle.xi, particle.R, particle.phi, particle.Z, particle.weight, particle.will_scatter, particle.secondary_index

dt = 20.0
file_number_width = 6 # default: 5
use_final_label = true # default: true

